%ul{style: 'padding:0px; list-style:none'}
  /ko foreach: impl().field_logics
  %li{style: 'padding-bottom:20px'}
    %div.box.grey.w25{style: 'padding-bottom:10px'}
      %span.smalltext.left{style: 'padding-right:10px'} if input is      
      = select_tag :value, nil, 'data-bind' => kov(attr: '{id: label}', options: '$root.currentField().impl().options()', optionsText: 'function(item) { return item.label }', optionsValue: 'function(item) { return item.id }', value: 'value', optionsCaption: 'window.model.default_select'), style: 'height:30px'
      %br
      %span.smalltext skip form to
      %select{"data-bind" => 'foreach: $root.selectLogicLayers(), value: field_id, selectedOptions: field_id', style: 'max-width:135px;height:30px'}
        /ko if: $index() == 0
        %option{value: ""} (no value)
        //ko
        %optgroup{"data-bind" => "attr: {label: name}, foreach: fields", style: ''}        
          %option{"data-bind" => "text: name, option: name, value: id"}
      %button.clist-remove{ko(click: '$root.removeFieldLogic'), title: 'Remove logic'}
  //ko
  %li{ko(with: '$root.newFieldLogic()')}
    %div.box.grey.w25{style: 'padding-bottom:10px'}
      %span.smalltext.left{style: 'padding-right:10px'} if input is
      = select_tag :value, nil, 'data-bind' => kov(attr: '{id: label}', options: '$root.currentField().impl().options()', optionsText: 'function(item) { return item.label }', optionsValue: 'function(item) { return item.id }', value: 'value', optionsCaption: 'window.model.default_select'), style: 'height:30px'
      
      %br
      %span.smalltext skip form to
      %select{"data-bind" => 'foreach: $root.selectLogicLayers(), value: field_id, selectedOptions: field_id', style: 'max-width:135px;height:30px'}
        /ko if: $index() == 0
        %option{value: ""} (no value)
        //ko
        %optgroup{"data-bind" => "attr: {label: name}, foreach: fields", style: ''}        
          %option{"data-bind" => "text: name, option: name, value: id"}
      %button.clist-add{ko(click: '$root.addFieldLogic', enable: '$root.fieldLogicValid'), title: 'Add logic'}
