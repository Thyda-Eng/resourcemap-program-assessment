<%= devise_error_messages! :class => 'centered w30' %>


<div class="box centered w30">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {"data-ajax" => false}) do |f| %>



  <h4>Sign up</h4>

  <hr class="shadow" />

  <div class="field w30">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field w30">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field w30">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field w30">
    <%= f.label :phone_number %> <i>(85512345678)</i>
    <%= f.telephone_field :phone_number %>
  </div>

  <div class="actions" align="center" style="padding-top:10px;">
    <button type="submit" class="white" data-theme="b" >Create account</button>
  </div>

  <a href="/" style="padding-top:10px;">Already have an account?</a>

  <%#= render :partial => "devise/shared/links" %>
<% end -%>

</div>
