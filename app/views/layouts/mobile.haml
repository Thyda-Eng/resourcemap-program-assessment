!!!
%html{:manifest => "/application.manifest"}
  %head
    %title= application_name.titleize
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %link{:href => "http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css", :rel => "stylesheet"}/
    %script{:src => "http://code.jquery.com/jquery-1.7.2.js"}
    =javascript_include_tag "jquery_ujs"
    %script{:src => "http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"}
    =javascript_include_tag "mobile"    
    %link{:href => "/images/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}
  %body{ :onload => "initialize()"}
    %div#flash_message{"style" => "display:none;", "data-role" => "popup"}
      = flash_message
    = yield
