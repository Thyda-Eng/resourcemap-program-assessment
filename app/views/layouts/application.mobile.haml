!!!
%html
  %head
    %title Resource Map Mobile
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %link{:href => "http://code.jquery.com/mobile/1.3.1/jquery.mobile-1.3.1.min.css", :rel => "stylesheet"}/
    = javascript_include_tag :defaults
    %script{:src => "http://code.jquery.com/jquery-1.9.1.min.js"}
    %script{:src => "http://code.jquery.com/mobile/1.3.1/jquery.mobile-1.3.1.min.js"}
    = csrf_meta_tag
  %body
    %div
    %div{"data-role" => "page"}
      %div{"data-role" => "header", "data-mini" => "true", "data-theme" => "c"}
        %div{:style => "text-align:center;"}
          = image_tag("/assets/resource_map.png", :alt => "logo", :style => "margin:0px auto;width:110px;height:35px;")
      %div{"data-role" => "content"}      
        = flash_message
        = yield
