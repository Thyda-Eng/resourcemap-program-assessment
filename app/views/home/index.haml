  %p{:style => "font-size: 16px;"}
    %span.r-arrow{:style => "margin-left: 4px"} 
    %span{:style => "font-weight:bold;"}=t('views.homepage.index.free')
    %span=t('views.homepage.index.free_description')
  %p{:style => "font-size: 16px;"}
    %span.r-arrow{:style => "margin-left: 4px"}
    %span{:style => "font-weight:bold;"}=t('views.homepage.index.free')
    %span=t('views.homepage.index.insightful_description')
  %p{:style => "font-size: 16px;"}
    %span.r-arrow{:style => "margin-left: 4px"}
    %span{:style => "font-weight:bold;"}=t('views.homepage.index.collaborative')
    %span=t('views.homepage.index.collaborative_description')
  %p{:style => "font-size: 16px;"}
    %span.r-arrow{:style => "margin-left: 4px"}
    %span{:style => "font-weight:bold;"}=t('views.homepage.index.sms_enabled')   
    %span=t('views.homepage.index.sms_enabled_description')
