    %span.r-arrow{:style => "margin-left: 4px"}
    %span{:style => "font-weight:bold;"}=t('views.homepage.index.map_ready')   
    %span=t('views.homepage.index.map_ready_description')

  %br/

  - if current_user
    %p
      =link_button_to t('views.homepage.index.view_your_collections'), collections_path, :class => "orange" , :style => "font-size: 24px; height: 52px; width: 260px;margin: auto;"

    %p
  - else
    %p
      = link_button_to 'Sign up for free', new_user_registration_path, :class => "orange", :style => "font-size: 24px; height: 52px; width: 220px;margin: auto;"
  .clear
  / #container
  .home-middle-bar{:style => "margin: 25px auto 20px;"}
    .benefits
      %ul#benefits-container
        %li
          %span.get-update.left
          %h3=t('views.homepage.index.get_updates') 
          %p=t('views.homepage.index.get_updates_description')
          %br{:clear => "all"}/
        %li
          %span.visualize-and-update.left
          %h3=t('views.homepage.index.visualize_and_update')
          %p=t('views.homepage.index.visualize_and_update_description')
          %br{:clear => "all"}/
        %li
          %span.update.left
          %h3=t('views.homepage.index.update')
          %p=t('views.homepage.index.update_description')
          %br{:clear => "all"}/
        %li
          %span.identify.left
          %h3=t('views.homepage.index.identify')
          %p=t('views.homepage.index.identify_description')
          %br{:clear => "all"}/
        %li
          %span.receive.left
          %h3=t('views.homepage.index.receive')
          %p=t('views.homepage.index.receive_description')
          %br{:clear => "all"}/
        %li
          %span.collaborate.left
          %h3=t('views.homepage.index.collaborate') 
