          %p=t('views.homepage.index.open_source_description') 
          %br{:clear => "all"}/
      / #benefits-container
    / #benefits
  / #home-middle-bar
  #container
    %h1=t('views.homepage.index.what_can_i_use_it_for') 
    %p.desc{:style => "margin:0 0 30px !important;"}
      =t('views.homepage.index.usage_information')
    %p
      %a{:href => "/real-time-resource-tracking", :style => "font-weight:bold; font-size:30px; margin-left: auto; margin-right: auto; width: 230px; display:block;"}=t('views.homepage.index.find_out_how')
        
